---
// Main layout wrapper component
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import "../styles/kindle-theme.css";

export interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const {
  title = "Kindle Notes",
  description = "Organize and share your Kindle highlights and notes",
  class: className = "",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bookerly:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class={`app-wrapper ${className}`}>
      <Header />

      <main class="main-content">
        <slot />
      </main>

      <Footer />
    </div>

    <!-- Progressive enhancement scripts -->
    <script is:inline>
      // Theme preference handling - inline to avoid FOUC
      (function () {
        const theme = localStorage.getItem("theme") || "auto";
        if (
          theme === "dark" ||
          (theme === "auto" &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>

    <script>
      // Service worker registration for offline functionality
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker
          .register("/sw.js")
          .catch((error) => console.log("SW registration failed"));
      }

      // Dark mode toggle functionality
      window.toggleTheme = function () {
        const html = document.documentElement;
        const isDark = html.classList.contains("dark");

        if (isDark) {
          html.classList.remove("dark");
          localStorage.setItem("theme", "light");
        } else {
          html.classList.add("dark");
          localStorage.setItem("theme", "dark");
        }

        // Update toggle button icon if it exists
        updateThemeToggleIcon(!isDark);
      };

      function updateThemeToggleIcon(isDark) {
        const toggleBtn = document.querySelector("[data-theme-toggle]");
        if (toggleBtn) {
          const icon = toggleBtn.querySelector("svg");
          if (icon) {
            icon.innerHTML = isDark
              ? '<path d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>'
              : '<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>';
          }
        }
      }

      // Initialize theme toggle icon on page load
      document.addEventListener("DOMContentLoaded", () => {
        const isDark = document.documentElement.classList.contains("dark");
        updateThemeToggleIcon(isDark);
      });
    </script>
  </body>
</html>

<style>
  .app-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: var(--color-background);
    background-image: var(--texture-paper);
    background-size: var(--texture-paper-size);
  }

  .main-content {
    flex: 1;
    width: 100%;
    max-width: var(--max-width-content);
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg) var(--space-3xl);
  }

  @media (max-width: 768px) {
    .main-content {
      padding: var(--space-lg) var(--space-md) var(--space-2xl);
    }
  }
</style>
