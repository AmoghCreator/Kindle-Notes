---
// Book detail page showing notes for a specific book
// Uses getStaticPaths() for build-time static generation
import BaseLayout from '../../layouts/BaseLayout.astro';
import NoteCard from '../../components/notes/NoteCard.astro';
import EmptyState from '../../components/common/EmptyState.astro';
import { getAllBooks, getNotesByBookId } from '../../lib/server/storage';
import { groupEntriesByAssociation } from '../../lib/utils/note-grouping'; // T021

// Generate static paths for all books at build time
export async function getStaticPaths() {
  const books = await getAllBooks();
  
  return books.map(book => ({
    params: { id: book.id },
    props: { book }
  }));
}

// Get book from props (passed by getStaticPaths)
const { book } = Astro.props;

// Load notes for this book
const allNotes = await getNotesByBookId(book.id);

// T021: Group notes by association for display
const grouped = groupEntriesByAssociation(book.id, allNotes);

// Sort notes by location (start) then by date (fallback for old code)
const sortedNotes = [...allNotes].sort((a, b) => {
  // First sort by location if both have it
  if (a.location?.start && b.location?.start) {
    return a.location.start - b.location.start;
  }
  // If one has location and other doesn't, prioritize location
  if (a.location?.start) return -1;
  if (b.location?.start) return 1;
  // Fall back to date sort
  return new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime();
});

// Compute statistics
const stats = {
  totalNotes: allNotes.length,
  highlights: allNotes.filter(n => n.type === 'highlight').length,
  notes: allNotes.filter(n => n.type === 'note').length,
  bookmarks: allNotes.filter(n => n.type === 'bookmark').length
};

const hasNotes = allNotes.length > 0;
---

<BaseLayout 
  title={`${book.title} - Book Notes`}
  description={`View notes and highlights for ${book.title}${book.author ? ` by ${book.author}` : ''}`}
>
  <main class="book-detail">
    {!hasNotes ? (
      <div class="empty-container">
        <EmptyState
          title="No Notes Yet"
          message="This book doesn't have any notes or highlights yet."
          icon="notes"
          action={{
            text: "Back to Library",
            href: "/"
          }}
        />
      </div>
    ) : (
      <>
        <!-- Book header -->
        <header class="book-header">
          <div class="book-info">
            <div class="book-cover">
              {book.cover ? (
                <img src={book.cover} alt={`${book.title} cover`} />
              ) : (
                <div class="book-cover-placeholder">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                </div>
              )}
            </div>
            <div class="book-details">
              <nav class="breadcrumb">
                <a href="/">Library</a>
                <span class="breadcrumb-separator">›</span>
                <span class="current-book">{book.title.split('(Z-Library')[0]}</span>
              </nav>
              <h1 class="book-title">{book.title.split('(Z-Library')[0]}</h1>
              {book.author && (
                <p class="book-author">{book.author}</p>
              )}
              <div class="book-stats">
                <span class="stat-item">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                  {stats.highlights} {stats.highlights === 1 ? 'highlight' : 'highlights'}
                </span>
                <span class="stat-item">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 011-1h1a2 2 0 100-4H7a1 1 0 01-1-1V8a1 1 0 011-1h3a1 1 0 001-1V4z"/>
                  </svg>
                  {stats.notes} {stats.notes === 1 ? 'note' : 'notes'}
                </span>
                <span class="stat-item">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                  </svg>
                  {stats.bookmarks} {stats.bookmarks === 1 ? 'bookmark' : 'bookmarks'}
                </span>
              </div>
            </div>
          </div>
        </header>

        <!-- Notes list -->
        <section class="notes-section">
          <div class="section-header">
            <h2 class="section-title">Notes & Highlights</h2>
            <span class="note-count">{stats.totalNotes} total</span>
          </div>

          <div class="notes-list">
            {/* T022: Render highlight-note pairs */}
            {grouped.pairs.map(pair => (
              <div class="note-group">
                {/* T023: Render highlight with indicator if it has a note */}
                <NoteCard 
                  note={pair.highlight} 
                  displayMode="standalone" 
                  hasAssociatedNote={!!pair.associatedNote}
                  bookTitle={book.title}
                  bookAuthor={book.author}
                />
                
                {/* T023: Render associated note if it exists */}
                {pair.associatedNote && (
                  <NoteCard 
                    note={pair.associatedNote}
                    displayMode="associated"
                    associatedHighlight={pair.highlight}
                    bookTitle={book.title}
                    bookAuthor={book.author}
                  />
                )}
              </div>
            ))}
            
            {/* T026: Render standalone notes section */}
            {grouped.standaloneNotes.length > 0 && (
              <>
                <div class="standalone-separator"></div>
                <h3 class="standalone-heading">Standalone Notes</h3>
                {grouped.standaloneNotes.map(note => (
                  <NoteCard note={note} displayMode="standalone" bookTitle={book.title} bookAuthor={book.author} />
                ))}
              </>
            )}
            
            {/* Render bookmarks if any */}
            {grouped.bookmarks.length > 0 && (
              <>
                <div class="standalone-separator"></div>
                <h3 class="standalone-heading">Bookmarks</h3>
                {grouped.bookmarks.map(note => (
                  <NoteCard note={note} displayMode="standalone" bookTitle={book.title} bookAuthor={book.author} />
                ))}
              </>
            )}
          </div>
        </section>

        <!-- T045/T046: Reading Sessions section (client-side rendered from IndexedDB) -->
        <section class="sessions-section" id="sessions-section" data-book-id={book.id} data-book-title={book.title}>
          <div class="section-header">
            <h2 class="section-title">Reading Sessions</h2>
            <span class="session-count" id="session-count"></span>
          </div>
          <div id="sessions-container">
            <div class="sessions-loading">
              <div class="loading-spinner-small"></div>
              <span>Loading reading sessions…</span>
            </div>
          </div>
        </section>
      </>
    )}
  </main>
</BaseLayout>

<script>
  import { initDB } from '../../lib/db/index';
  import { getSessionsForBookPage } from '../../lib/db/repositories/unified-history';
  import type { ReadingSession } from '../../lib/types';

  async function renderBookSessions() {
    const section = document.getElementById('sessions-section');
    const container = document.getElementById('sessions-container');
    const countEl = document.getElementById('session-count');
    if (!section || !container || !countEl) return;

    const bookId = section.dataset.bookId || '';
    const bookTitle = section.dataset.bookTitle || '';

    try {
      await initDB();
      const { sessions, canonical } = await getSessionsForBookPage(bookId, bookTitle);

      if (sessions.length === 0) {
        countEl.textContent = '';
        container.innerHTML = renderEmptyState();
        return;
      }

      // Sort sessions by date descending
      const sorted = [...sessions].sort(
        (a, b) => new Date(b.sessionDate).getTime() - new Date(a.sessionDate).getTime()
      );

      countEl.textContent = `${sorted.length} ${sorted.length === 1 ? 'session' : 'sessions'}`;
      container.innerHTML = renderSessionTimeline(sorted);
    } catch (err) {
      console.error('Failed to load reading sessions:', err);
      container.innerHTML = `
        <div class="sessions-error">
          <p>Unable to load reading sessions.</p>
        </div>`;
    }
  }

  function renderEmptyState(): string {
    return `
      <div class="sessions-empty">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="sessions-empty-icon">
          <path d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
        </svg>
        <p class="sessions-empty-title">No reading sessions yet</p>
        <p class="sessions-empty-message">Log your first reading session to start tracking your progress with this book.</p>
        <a href="/sessions" class="sessions-empty-cta">Log a Session</a>
      </div>`;
  }

  function formatDate(dateStr: string): string {
    const date = new Date(dateStr + 'T00:00:00');
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    const yesterday = new Date(today);
    yesterday.setDate(yesterday.getDate() - 1);

    if (date.getTime() === today.getTime()) return 'Today';
    if (date.getTime() === yesterday.getTime()) return 'Yesterday';

    return date.toLocaleDateString('en-US', {
      weekday: 'short',
      month: 'short',
      day: 'numeric',
      year: date.getFullYear() !== today.getFullYear() ? 'numeric' : undefined,
    });
  }

  function renderSessionTimeline(sessions: ReadingSession[]): string {
    return `<div class="session-timeline">
      ${sessions.map(s => `
        <div class="session-timeline-item">
          <div class="session-timeline-dot"></div>
          <div class="session-timeline-content">
            <div class="session-timeline-date">${formatDate(s.sessionDate)}</div>
            <div class="session-timeline-detail">
              <span class="session-pages">Pages ${s.pageStart}–${s.pageEnd}</span>
              <span class="session-page-count">(${s.pageEnd - s.pageStart + 1} pages)</span>
            </div>
            ${s.insight ? `<p class="session-timeline-insight">${escapeHtml(s.insight)}</p>` : ''}
          </div>
        </div>
      `).join('')}
    </div>`;
  }

  function escapeHtml(str: string): string {
    const div = document.createElement('div');
    div.textContent = str;
    return div.innerHTML;
  }

  // Run on load
  renderBookSessions();
</script>

