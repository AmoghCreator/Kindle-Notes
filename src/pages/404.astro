---
// 404 Not Found page
import BaseLayout from '../layouts/BaseLayout.astro';
import EmptyState from '../components/common/EmptyState.astro';
---

<BaseLayout 
  title="Page Not Found" 
  description="The page you're looking for doesn't exist"
>
  <main class="error-page">
    <div class="container">
      <EmptyState
        title="Page Not Found"
        message="The page you're looking for doesn't exist or may have been moved."
        icon="search"
        action={{
          text: "Go Home",
          href: "/"
        }}
      />
      
      <div class="helpful-links">
        <h3>You might be looking for:</h3>
        <ul>
          <li><a href="/">Import Kindle Notes</a></li>
          <li><a href="/library">My Library</a></li>
          <li><a href="/search">Search Notes</a></li>
        </ul>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .error-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2xl) 0;
  }
  
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
    text-align: center;
  }
  
  .helpful-links {
    margin-top: var(--space-2xl);
    padding: var(--space-xl);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
  }
  
  .helpful-links h3 {
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0 0 var(--space-md);
  }
  
  .helpful-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .helpful-links li a {
    display: block;
    padding: var(--space-sm) var(--space-md);
    color: var(--color-primary);
    text-decoration: none;
    font-family: var(--font-family-secondary);
    font-weight: var(--font-weight-medium);
    border-radius: var(--border-radius-sm);
    transition: all 0.2s var(--easing-ease-out);
  }
  
  .helpful-links li a:hover {
    background: var(--color-primary);
    color: white;
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 0 var(--space-md);
    }
    
    .helpful-links {
      padding: var(--space-lg);
    }
  }
</style>