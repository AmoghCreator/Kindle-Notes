---
// Homepage with file upload functionality
import BaseLayout from '../layouts/BaseLayout.astro';
import FileUpload from '../components/upload/FileUpload.astro';
---

<BaseLayout 
  title="Import Your Kindle Notes" 
  description="Upload your Kindle clippings and organize your highlights, notes, and bookmarks"
>
  <main class="container">
    <section class="hero">
      <h1 class="hero-title">
        Your Kindle Notes,
        <span class="hero-highlight">Beautifully Organized</span>
      </h1>
      
      <p class="hero-description">
        Import your Kindle clippings file and transform your highlights, notes, and bookmarks 
        into a searchable, shareable library that grows with your reading journey.
      </p>

      <div class="hero-features">
        <div class="feature">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/>
              <polyline points="7,10 12,15 17,10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
          </div>
          <h3>Easy Import</h3>
          <p>Drag and drop your "My Clippings.txt" file to get started instantly</p>
        </div>

        <div class="feature">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3>Smart Search</h3>
          <p>Find any highlight or note instantly with powerful search and filtering</p>
        </div>

        <div class="feature">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 12v8a2 2 0 002 2h12a2 2 0 002-2v-8"/>
              <polyline points="16,6 12,2 8,6"/>
              <line x1="12" y1="2" x2="12" y2="15"/>
            </svg>
          </div>
          <h3>Share Insights</h3>
          <p>Turn your favorite quotes into beautiful social media posts</p>
        </div>
      </div>
    </section>

    <section class="upload-section">
      <h2 class="section-title">Import Your Kindle Notes</h2>
      
      <div class="upload-instructions">
        <h3>How to get your Kindle clippings file:</h3>
        <ol>
          <li>Connect your Kindle device to your computer via USB</li>
          <li>Navigate to the Kindle drive and open the "documents" folder</li>
          <li>Find the file named "My Clippings.txt"</li>
          <li>Copy this file to your computer</li>
          <li>Drag and drop it below or click to browse</li>
        </ol>
      </div>

      <FileUpload />
    </section>

    <section class="getting-started">
      <h2 class="section-title">Getting Started</h2>
      
      <div class="steps">
        <div class="step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3>Import</h3>
            <p>Upload your Kindle clippings file to automatically organize your highlights and notes by book</p>
          </div>
        </div>

        <div class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3>Organize</h3>
            <p>Browse your library, search for specific quotes, and add tags to create your personal knowledge system</p>
          </div>
        </div>

        <div class="step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h3>Share</h3>
            <p>Turn your favorite insights into Twitter posts or Instagram stories to inspire others</p>
          </div>
        </div>
      </div>
    </section>

    <section class="demo-section">
      <h2 class="section-title">See It In Action</h2>
      
      <div class="demo-preview">
        <div class="demo-book">
          <div class="demo-book-cover">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
            </svg>
          </div>
          <div class="demo-content">
            <h4>Atomic Habits</h4>
            <p class="demo-author">James Clear</p>
            <div class="demo-note">
              "You do not rise to the level of your goals. You fall to the level of your systems."
            </div>
            <div class="demo-tags">
              <span class="demo-tag">#productivity</span>
              <span class="demo-tag">#habits</span>
            </div>
          </div>
        </div>
      </div>
      
      <p class="demo-description">
        Your notes will be automatically organized by book, with smart categorization and 
        the ability to add your own tags and annotations.
      </p>
    </section>
  </main>
</BaseLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  /* Hero Section */
  .hero {
    text-align: center;
    padding: var(--space-3xl) 0;
    margin-bottom: var(--space-2xl);
  }

  .hero-title {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    color: var(--color-text-primary);
    margin: 0 0 var(--space-lg);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-highlight {
    color: var(--color-primary);
  }

  .hero-description {
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    margin: 0 auto var(--space-2xl);
    max-width: 600px;
  }

  .hero-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-xl);
    margin-top: var(--space-2xl);
  }

  .feature {
    text-align: center;
    padding: var(--space-lg);
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    color: var(--color-primary);
    margin: 0 auto var(--space-md);
  }

  .feature-icon svg {
    width: 100%;
    height: 100%;
  }

  .feature h3 {
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0 0 var(--space-sm);
  }

  .feature p {
    font-family: var(--font-family-secondary);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  /* Upload Section */
  .upload-section {
    margin-bottom: var(--space-3xl);
    padding: var(--space-2xl) 0;
    background: var(--color-surface);
    border-radius: var(--border-radius-lg);
    border: 1px solid var(--color-border);
  }

  .section-title {
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    text-align: center;
    margin: 0 0 var(--space-xl);
  }

  .upload-instructions {
    max-width: 500px;
    margin: 0 auto var(--space-xl);
    padding: 0 var(--space-lg);
  }

  .upload-instructions h3 {
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0 0 var(--space-md);
  }

  .upload-instructions ol {
    font-family: var(--font-family-secondary);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    padding-left: var(--space-lg);
  }

  .upload-instructions li {
    margin-bottom: var(--space-sm);
  }

  /* Getting Started Section */
  .getting-started {
    margin-bottom: var(--space-3xl);
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
    margin-top: var(--space-xl);
  }

  .step {
    display: flex;
    gap: var(--space-md);
    align-items: flex-start;
  }

  .step-number {
    background: var(--color-primary);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-family-secondary);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
    flex-shrink: 0;
  }

  .step-content h3 {
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0 0 var(--space-sm);
  }

  .step-content p {
    font-family: var(--font-family-secondary);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  /* Demo Section */
  .demo-section {
    margin-bottom: var(--space-3xl);
    text-align: center;
  }

  .demo-preview {
    margin: var(--space-xl) auto;
    max-width: 500px;
  }

  .demo-book {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    padding: var(--space-lg);
    display: flex;
    gap: var(--space-md);
    text-align: left;
    box-shadow: var(--shadow-sm);
  }

  .demo-book-cover {
    width: 60px;
    height: 90px;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-radius: var(--border-radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .demo-book-cover svg {
    width: 24px;
    height: 24px;
  }

  .demo-content {
    flex: 1;
    min-width: 0;
  }

  .demo-content h4 {
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0 0 var(--space-xs);
  }

  .demo-author {
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-md);
  }

  .demo-note {
    font-family: var(--font-family-primary);
    font-style: italic;
    color: var(--color-text-primary);
    line-height: var(--line-height-relaxed);
    margin: 0 0 var(--space-md);
    padding: var(--space-sm);
    background: var(--color-surface-hover);
    border-radius: var(--border-radius-sm);
    border-left: 4px solid var(--color-primary);
  }

  .demo-tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
  }

  .demo-tag {
    background: var(--color-primary);
    color: white;
    font-family: var(--font-family-secondary);
    font-size: var(--font-size-xs);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--border-radius-full);
  }

  .demo-description {
    font-family: var(--font-family-secondary);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-top: var(--space-lg);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .container {
      padding: 0 var(--space-md);
    }

    .hero {
      padding: var(--space-2xl) 0;
    }

    .hero-title {
      font-size: var(--font-size-2xl);
    }

    .hero-description {
      font-size: var(--font-size-base);
    }

    .hero-features {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .upload-section {
      padding: var(--space-xl) 0;
    }

    .steps {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .demo-book {
      flex-direction: column;
      text-align: center;
    }

    .demo-book-cover {
      align-self: center;
    }
  }
</style>
